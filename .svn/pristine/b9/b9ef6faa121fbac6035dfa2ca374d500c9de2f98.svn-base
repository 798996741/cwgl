/*遮罩层区域*/

.mask {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.darkmask {
    width: 780px;
    position: absolute;
    filter: alpha(opacity=60);
    background-color: #eef2f5;
    text-align: center;
    border-radius: 15px;
}

.mask-top {
    width: 100%;
    height: 40px;
    background-color: #4a9fd8;
    border-top-left-radius: 15px;
    border-top-right-radius: 15px;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.mask-top-size {
    font-size: 15px;
    color: #fff;
    margin-left: 25px;
}

.mask-main {
    padding: 20px 30px;
}

.mask-main-button {
    width: 88px;
    height: 24px;
    line-height: 24px;
    color: #fff;
    font-weight: bold;
    background-color: #ddd;
    border-radius: 5px;
    border: rgba(0, 0, 0, 0);
    letter-spacing: 2px;
    text-align: center;
    font-size: 12px;
    border: 1px solid #fff;
    margin-right: 5px;
    padding-left: 5px;
    cursor: pointer;
}

.mask-size {
    width: 88px;
    letter-spacing: 2px;
    line-height: 13px;
    text-align: right;
    font-size: 12px;
    padding-right: 5px;
}

.mask-size-top {
    margin-top: 5px;
    vertical-align: top;
}

.mask-img {
    width: 52.8px;
    height: 21.6px;
    cursor: pointer;
    display: flex;
    align-items: center;
}

.mask-img-updo {
    width: 93.1px;
    height: 21.6px;
    cursor: pointer;
    display: flex;
    align-items: center;
}

.mask-img-size {
    font-size: 10px;
    color: #fff;
    padding-left: 20px;
    letter-spacing: 1px;
    line-height: 21.6px;
}

.mask-img-size1 {
    font-size: 10px;
    color: #fff;
    padding-left: 16px;
    letter-spacing: 1px;
    line-height: 21.6px;
}

.mask-img-size2 {
    font-size: 10px;
    color: #4a9fd8;
    padding-right: 20px;
    letter-spacing: 1px;
    line-height: 21.6px;
}

.mask-edit {
    background: url(../img/icon/modal_edit.png);
    background-size: 52.8px 21.6px;
}

.mask-delete {
    background: url(../img/icon/delete.png);
    background-size: 52.8px 21.6px;
}

.mask-download {
    background: url(../img/icon/model_download.png);
    background-size: 52.8px 21.6px;
}

.mask-upload {
    background: url(../img/icon/modal_upload.png);
    background-size: 52.8px 21.6px;
}

.mask-upload-download {
    background: url(../img/icon/modal_upload_download.png);
    background-size: 93.1px 21.6px;
}

.mask-dropdown {
    background: url('../img/modal/dropdown_icon.png') no-repeat;
    background-size: 18px;
    width: 18px;
    height: 18px;
    position: absolute;
    right: 16px;
    top:11px;
}

.mask-dropdown-toggle {
    background: url('../img/modal/dropdown_toggle_icon.png') no-repeat;
    background-size: 18px;
    width: 18px;
    height: 18px;
    position: absolute;
    right: 16px;
    top:11px;
}

.mask-input {
    width: 136px;
    height: 24px;
    line-height: 24px;
    background-color: #fff;
    border-radius: 5px;
    border: rgba(0, 0, 0, 0);
    padding-left: 5px;
    font-size: 12px;
}

.mask-textarea {
    height: 24px;
    line-height: 24px;
    background-color: #fff;
    border-radius: 5px;
    border: rgba(0, 0, 0, 0);
    padding: 2px 5px;
    font-size: 12px;
    line-height: 1.5em;
}

.mask-textarea1 {
    width: 136px;
}

.mask-textarea2 {
    width: 136px;
}

.mask-textarea3 {
    width: 136px;
}

.mask-textarea4 {
    width: 372px;
}

.mask-textarea-size {
    line-height: 12px;
    font-size: 11px;
    cursor: pointer;
    color: #4a9ed8;
}

.mask-textarea-shrink {
    line-height: 12px;
    font-size: 11px;
    cursor: pointer;
    color: #4a9ed8;
}

.mask-button {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    padding: 8px;
}

.mask-button-size {
    color: #fff;
    font-size: 15px;
    line-height: 24px;
    text-align: center;
    padding: 8px;
}

.mask-save {
    width: 136px;
    height: 24px;
    background-color: #4a9fd8;
    border-radius: 6px;
    margin-left: 180px;
    cursor: pointer;
}

.mask-close {
    width: 136px;
    height: 24px;
    background-color: #ff7777;
    border-radius: 6px;
    margin-right: 180px;
    cursor: pointer;
}

.mask-ListImport {
    width: 204px;
    height: 24px;
    background-color: #8cc63f;
    margin-left: 20px;
    margin-top: 20px;
    margin-bottom: 20px;
    cursor: pointer;
    box-shadow: 3px 3px 6px #c0c0c0;
}

.mask-InfoImport {
    width: 204px;
    height: 24px;
    background-color: #8e2ecc;
    margin-right: 20px;
    margin-top: 20px;
    margin-bottom: 20px;
    cursor: pointer;
    box-shadow: 3px 3px 6px #c0c0c0;
}

.mask-subtitle {
    background-color: #dddddd;
    width: 100%;
    height: 18px;
    position: absolute;
    top: 105px;
    display: flex;
    align-items: center;
    justify-content: left;
}

.mask-subtitle-line {
    background-color: #499ed7;
    width: 3px;
    height: 15px;
    margin-left: 40px;
}

.mask-subtitle-size {
    letter-spacing: 2px;
    font-size: 12px;
    color: #499ed7;
    text-align: left;
    margin-left: 5px;
}

.mask-select {
    appearance: none;
    -moz-appearance: none;
    -webkit-appearance: none;
    outline: none;
    padding: 0 5px 0 5px;
    background: url('../img/modal/dropdown_icon.png') no-repeat scroll 95% center transparent;
    background-size: 18px;
    cursor: pointer;
    width: 136px;
    height: 24px;
    font-size: 12px;
    line-height: 24px;
    background-color: #fff;
    border-radius: 5px;
    border: rgba(0, 0, 0, 0);
}

.mask-select1 {
    appearance: none;
    -moz-appearance: none;
    -webkit-appearance: none;
    outline: none;
    padding: 0 20px 0 20px;
    background: url('../img/modal/dropdown_icon.png') no-repeat scroll 95% center transparent;
    background-size: 18px;
    padding: 0 20px 0 5px;
    cursor: pointer;
    width: 250px;
    height: 24px;
    font-size: 12px;
    line-height: 24px;
    background-color: #fff;
    border-radius: 5px;
    border: rgba(0, 0, 0, 0);
}

.bgcolor-ddd {
    background-color: #dddddd;
}

.bgcolor-eef2f5 {
    background-color: #eef2f5;
}

.bgcolor-rgba {
    background-color: rgba(0, 0, 0, 0);
}