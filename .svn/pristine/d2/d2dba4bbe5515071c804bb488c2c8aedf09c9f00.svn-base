.login-middle {
  height: 58%;
  width: 23%;
  position: absolute;
  top: 19.5%;
  right: 13.5%;
  background-color: #fff;
  border-radius: 30px;
  /* box-shadow: 2px 3px 15px #e5e5e5; */
}

.login {
  height: 78%;
  width: 76%;
  padding: 6% 12%;
  border: 1px solid #b3b3b3;
  border-radius: 20px;
  box-shadow: 5px 5px 4px #cbcbcb;
}

.username {
  width: 99.5%;
  margin-top: 8%;
  height: 8%;
  border: #eef1f4 solid 1px;
  border-radius: 2px;
  display: flex;
  /*  border-radius: 10px;*/
  background: #fff;
}

.usernameIcon {
  display: flex;
  justify-content: center;
  align-items: center;
  background: url('../img/login/username_icon.png') no-repeat center;
  width: 12%;
  background-size: 65%;
}

.passwordIcon {
  background: url('../img/login/password_icon.png') no-repeat center !important;
  background-size: 65% !important;
}

.codeIcon {
  background: url('../img/login/code_icon.png') no-repeat center !important;
  background-size: 65% !important;
}

.user {
  display: flex;
  width: 87%;
  font-size: 12px;
}

.user input {
  border: 0;
  outline: none;
  text-indent: 0.3em;
  font-size: 12px;
  color: #b3b3b3;
  width: 100%;
}

.saveUser {
  height: 10%;
  width: 100%;
  font-size: 14px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 5% 0;
}

#check {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.login-logo {
  width: 100%;
  margin: 8% 0 15% 0;
}

.login-logo img {
  width: 100%;
}

#check .inputCheck {
  position: absolute;
  width: 14px;
  height: 14px;
  visibility: hidden;
  background: #e92333;
  border: #f7931e solid 1px;
  border-radius: 3px;
  margin-top: 5px;
  margin-left: 15px;
}

#check span {
  position: relative;
  margin-top: 1%;
}

#check .inputCheck+label {
  cursor: pointer;
  display: inline-block;
  border: #f7931e solid 1px;
  border-radius: 3px;
  width: 14px;
  height: 14px;
  background: url('../img/home/hook_icon.png') no-repeat;
  background-position: -28px -3px;
  margin-top: 5px;
  margin-left: 15px;
}

#check .inputCheck:checked+label {
  background-position: -6px -5px;
}

.selectUser {
  padding-left: 5px;
  color: #f7931e;
  font-size: 12px;
  font-family: 'MicrosoftYaHei';
}

.loginButton {
  width: 100%;
  height: 12%;
  border-radius: 100px;
  font-size: 18px;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  margin-top: 7%;
  background-color: #5fade3;
}

.loginButton a {
  color: #fff;
}

.loginCode {
  border-radius: 5px;
  height: 80%;
  width: 53%;
  float: right;
  margin-top: 1%;
  margin-left: 1.5%;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-items: center;
}

.loginCode a {
  height: 100%;
  width: 100%;
}
